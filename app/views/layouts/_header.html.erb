<header class="bg-yellow-500 shadow-sm p-4 flex justify-between items-center fixed top-0 left-0 right-0 z-10">
    <div class="flex items-center space-x-2">
        <h1 id="username" class="text-xl font-bold text-gray-800">
            <%= if current_user
                  "#{current_user.first_name} #{current_user.last_name}"
                else
                  'ゲスト'
                end %>さん
        </h1>
        <span id="last-login" class="text-xs text-gray-600"></span>
    </div>
    <div class="flex items-center space-x-4">
        <button class="relative">
            <span>🔔</span>
            <span id="rewards-badge" class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full px-1.5 py-0.5 hidden"></span>
        </button>
        <button>
            <span>⚙️</span>
        </button>
    </div>
</header>
