<h1 class="text-center text-gray-700 md:text-3xl text-2xl font-bold mt-5 mb-2">ログイン</h1>
<%= form_with url: login_path, class: "w-full  max-w-lg md:max-w-xl mx-auto " do |f| %>
  <div class="flex flex-col -mx-3 mb-6">
    <div class="w-full  px-3 mb-6 md:mb-8">
      <%= f.label :email, class: "" %>
        <%= f.email_field :email,
          class: ""
          %>
    </div>
    <div class="w-full  px-3 mb-6 md:mb-8">
      <%= f.label :password, class: "" %>
        <%= f.password_field :password,
          class: ""
          %>
    </div>
    <%= f.submit "送信" , class: "" %>
  <% end %>
    <div class='text-center md:mb-5 mb-3'>
      <%= link_to "ログイン" , new_user_profiles_path %>
    </div>
    <div class='text-center md:mb-1'>
      <%= link_to 'パスワードをお忘れの方はコチラ', "#" %>
    </div>
  </div>