<h1>お問い合わせ</h1>
<%= form_with(model: @contact, url: contacts_path, method: :post, data: { turbo: false }) do |f|  %> <!-- バリデーションメッセージが出ないためturboを無効化してます -->
  <div>
    <%= f.label :name, 'お名前' %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :message, 'お問い合わせ内容' %><br>
    <%= f.text_area :message %>
  </div>
  <% if @contact.errors.any? %>
  <div style="color: red;">
    <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div>
    <%= f.submit '送信' %>
  </div>
<% end %>

<%= link_to 'プロフィール', user_profile_path %>
